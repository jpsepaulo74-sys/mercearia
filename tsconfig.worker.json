"types": ["@cloudflare/workers-types", "vite/client"]

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["es2018", "dom"],
    "rootDir": "src",
    "outDir": "dist/worker",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client", "./worker-configuration.d.ts"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/worker/**/*", "src/shared/**/*"]
}
